<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:gravity="center_vertical"
    tools:context=".highscore.HighScoreActivity">

    <TextView
        android:id="@+id/rank"
        android:layout_width="46dp"
        android:layout_height="66dp"
        android:fontFamily="@font/space_ranger_cond"
        android:gravity="center"
        android:text="1"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rank"
        android:fontFamily="@font/space_ranger_cond"
        android:text="name"
        android:textColor="#FB621B"
        android:layout_marginStart="15dp"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rank"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/space_ranger_condital"
        android:text="000000000 "
        android:textColor="#FFB18D"
        android:textSize="40dp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>